<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">MIS</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <!-- <li><a href="/index">Sign in</a></li> -->
