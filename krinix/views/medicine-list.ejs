                <li><a href="/aboutus">About us</a></li>
                <% if(!isAuthenticated) { %>
                    <li><a id="login-right-nav-btn" href="/login">Login</a></li>
                    <li><a href="/signup">Signup</a></li>
                    <% } else { %>
                    <li>
                      <form action="/logout" method="post">
