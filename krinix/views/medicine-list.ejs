    <% if (medic.length> 0) { %>
        <div class="containe" id="medic-container">
            <% for (let product of medic) { %>
                <article class="medicine-item">
                <h2 class="Card-header"><b>
                        <%= product.title %>
                    </b></h2>
                <!-- <p>Used in a common painkiller used to treat aches and pain.</p> -->
                <img class="sec-img" src='<%= product.imageUrl %>' alt="<%= product.title %>" />
                <!-- <button >details</button>
  <button>buy</button> -->
                <div class="manu">
                    <h4><b>Manufacturer: </b></h4>
                    <h4><%= product.manufacturer %></h4>
                    <br>
                    <h4><b>Salt Composition: </b></h4>
                    <h4><%= product.sc %></h4>
                    <br>
                    <h4><b>Uses: </b></h4>
                    <ul>
                        <li>
                            <h4><%= product.uses %></h4>
                        </li>
                    </ul>
                    <h4><b>Price: </b></h4>
                    <h4><%= product.price %></h4>
                </div>
                <br>

                <a class="Details" href="/medicine/<%= product.id %>">Details</a>
                <a class="Buy" href="/edit-medicine/<%= product.id %>">Edit</a>
                <a class="Delete" href="/delete-medicine/<%= product.id %>">Delete</a>
                
                <!-- <form action="/paracetamol_buy.html">
                    <input class="Buy" type="submit" value="buy" />
                </form> -->
                </article>
            <% } %>
        </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
