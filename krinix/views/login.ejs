<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/public/add-medicine.css" />
    <link rel="stylesheet" href="/public/auth.css" />
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">MIS</a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <!-- <li><a href="#">Page 1</a></li>
              <li><a href="#">tips of the day</a></li> -->
            <li><a href="/aboutus">About us</a></li>
            <% if(!isAuthenticated) { %>
              <li class="active"><a id="login-right-nav-btn" href="/login">Login</a></li>
              <li><a href="/signup">Signup</a></li>
              <% } else { %>
              <li>
                <form action="/logout" method="post">
                  <button class="logout-btn">logout</button>
                </form>
              </li>
              <% } %>
          </ul>
        </div>
      </nav>

      <h1 id="login-h2"><b> Login </b></h1>
      <hr>
      <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
      <% } %>
    <div class="form" id="login-form">
    <form action="/login" method="post" novalidate>
        <div class="text-bar" id="login-1">
            <label class="right" for="email">E-mail</label>
            <input class="left <% if(validationError  === 'email') { %> invalid <% } else { %> '' <% } %> %>" type="email" name="email" id="email" value="<%= oldInput.email %>">
        </div>
        <div class="text-bar">
            <label class="right" for="password">Password</label>
            <input class="left <% if(validationError  === 'password') { %> invalid <% } else { %> '' <% } %> %>" type="password" name="password" id="password" value="<%= oldInput.password %>">
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="add-btn" id="login-btn" type="submit">Login</button>
        
    </form>
    </div>
</body>
</html>