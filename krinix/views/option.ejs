  <link rel="stylesheet" href="/public/option.css" />
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">MIS</a>
        </div>
        <ul class="nav navbar-nav" id="ul-bar">
          <li class="active"><a href="/">Home</a></li>
          <!-- <li><a href="#">Page 1</a></li>
          <li><a href="#">tips of the day</a></li> -->
          <li><a href="/aboutus">About us</a></li>
          <% if(!isAuthenticated) { %>
          <li><a id="login-right-nav-btn" href="/login">Login</a></li>
          <li><a href="/signup">Signup</a></li>
          <% } else { %>
          <li>
            <form action="/logout" method="POST">
              
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="logout-btn">logout</button>
            </form>
          </li>
          <% } %>

        </ul>
      </div>
    </nav>
    <h1>Welcome to MIS</h1>
    <h2>select your choice</h2>
    <br>
    <br>
    <div>
      <form action="/index">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input <% if(istheAdmin) { %> class="btn1" <% } else { %> class="btnND1" <% } %> type="submit" value="search medicine" />
      </form>
      <% if(istheAdmin) { %>
      <form action="/add-medicine">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input class="btn2" type="submit" value="Add medicine" />
      </form>
      <% } %>
      <form action="/condition">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input <% if(istheAdmin) { %> class="btn3" <% } else { %> class="btnND3" <% } %> type="submit" value="Symptoms">
      </form>
      <form action="/Medicine-list">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input <% if(istheAdmin) { %> class="btn4" <% } else { %> class="btnND4" <% } %> type="submit" value="View all Medicines">
      </form>
    </div>
  </body>

  </html>